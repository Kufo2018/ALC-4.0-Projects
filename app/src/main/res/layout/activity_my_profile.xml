<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MyProfile">

        <ImageView
                android:layout_margin="16dp"
                android:src="@drawable/kufo"
                android:layout_width="251dp"
                android:layout_height="211dp"
                android:id="@+id/imageView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>

        <TextView
                android:layout_margin="8dp"
                android:id="@+id/my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>

        <View
                android:layout_margin="8dp"
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:textColor="@color/textColor"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/my_name"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:text="Track:"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/qname"
                app:layout_constraintBaseline_toBaselineOf="@+id/track" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>

        <TextView
                android:textSize="20sp"
                android:text="Country:"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/qname"
                android:id="@+id/qcountry"
                app:layout_constraintBaseline_toBaselineOf="@+id/slack_username"/>

        <TextView
                android:textSize="20sp"
                android:text="Email:"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/qcountry"
                android:id="@+id/qemail"
                app:layout_constraintBaseline_toBaselineOf="@+id/phone_number"/>

        <TextView
                android:textSize="20sp"
                android:text="Phone Number:"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/qemail"
                android:id="@+id/qphone_number"
                app:layout_constraintBaseline_toBaselineOf="@+id/email"/>

        <TextView
                android:id="@+id/qslack_username"
                android:textSize="20sp"
                android:text="Slack Username:"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/qphone_number"
                app:layout_constraintBaseline_toBaselineOf="@+id/country"/>

        <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/track"
                android:textSize="20sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/qname"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/divider"/>

        <TextView
                android:textSize="20sp"
                android:id="@+id/country"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/qslack_username"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/qphone_number"/>

        <TextView
                android:textSize="20sp"
                android:id="@+id/email"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/qphone_number"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/qemail"/>

        <TextView
                android:textSize="20sp"
                android:id="@+id/phone_number"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/qemail" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/qcountry"/>

        <TextView
                android:textSize="20sp"
                android:id="@+id/slack_username"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/qcountry" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/qname"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
